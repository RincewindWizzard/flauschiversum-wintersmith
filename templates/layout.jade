doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href="/style/main.css")
      script(src='/js/jquery.js')
      //script(src="/js/slides.js")
      link(rel="stylesheet", type="text/css", href="/style/slick/slick.css")
      // Add the new slick-theme.css if you want the default styling
      link(rel="stylesheet", type="text/css", href="/style/slick/slick-theme.css")
      script(type="text/javascript", src="/js/slick.min.js")
      script(src="/js/jquery.slides.min.js")
      include facebook.jade
  body(class=bodyclass)
    header.header
      block headerfull
        div.content-wrap
          block header
            div.logo
              h1
                a(href='/')= locals.name
              p.description= locals.description
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
