
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block append head
  script(src="/js/article.js")

append header
  include author
  h1= page.title
  div.flex-horizontal-wrap-center
    img.title-image(src=page.url + page.metadata.image)
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) « Zurück


